{
  "name": "vhash-cloudflare-app",
  "version": "1.0.0",
  "description": "VHash Telegram Mini App - Cloudflare Migration",
  "private": true,
  "scripts": {
    "dev": "wrangler pages dev --d1=DB=vhash-dev --r2=MEDIA ./out",
    "build": "echo 'Add frontend build command here'",
    "deploy": "wrangler pages deploy ./out",
    "deploy:staging": "wrangler pages deploy ./out --env staging",
    "db:create": "wrangler d1 create vhash-prod && wrangler d1 create vhash-staging",
    "db:migrate": "wrangler d1 execute vhash-prod --file=./schema.sql",
    "db:migrate:staging": "wrangler d1 execute vhash-staging --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute vhash-dev --local --file=./schema.sql",
    "r2:create": "wrangler r2 bucket create vhash-media && wrangler r2 bucket create vhash-media-staging",
    "migration:export": "npx ts-node scripts/migration/export-postgres.ts",
    "migration:import": "npx ts-node scripts/migration/import-d1.ts",
    "migration:media": "npx ts-node scripts/migration/migrate-media.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240129.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.25.0",
    "dotenv": "^16.4.0",
    "pg": "^8.11.3",
    "@supabase/supabase-js": "^2.39.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
